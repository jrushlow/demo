{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h1>{{ 'title.request_reset_password'|trans }}</h1>

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>{{ 'reset_password.request'|trans }}</small>
                    </div>

                    <button class="btn btn-primary">{{ 'action.request_reset'|trans }}</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
        <div id="login-help" class="col-sm-5">
            <h3>
                <i class="hidden-xs fa fa-long-arrow-left" aria-hidden="true"></i>
                {{ 'help.login_users'|trans }}
            </h3>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th scope="col">{{ 'label.username'|trans }}</th>
                    <th scope="col">{{ 'label.email'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>john_user</td>
                    <td><code>jane_admin@symfony.com</code></td>
                </tr>
                <tr>
                    <td>jane_admin</td>
                    <td><code>john_user@symfony.com</code></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}